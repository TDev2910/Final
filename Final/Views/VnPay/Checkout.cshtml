@model Final.Models.PaymentInformationModel

<div class="container mt-5">
    <h2 class="text-center">Thanh toán qua VNPAY</h2>

    <form asp-action="CreatePayment" method="post">
        <div class="form-group">
            <label for="Amount">Số tiền</label>
            <input type="number" asp-for="Amount" class="form-control" />
        </div>

        <div class="form-group">
            <label for="OrderDescription">Mô tả đơn hàng</label>
            <input type="text" asp-for="OrderDescription" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Thanh toán</button>
    </form>
</div>