@model Final.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<!-- Phần nền màu xám bao phủ toàn bộ trang -->
<section class="d-flex align-items-center justify-content-center min-vh-100" style="background-color: white;">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg p-4 border-0 rounded-4 bg-white">
                    <!-- Logo -->
                    <div class="text-center">
                        <div class="d-inline-block bg-dark text-white rounded-circle p-3 mb-3">
                            <strong>FKT</strong>
                        </div>
                        <h4 class="fw-bold">Mohamed FKT</h4>
                    </div>

                    <!-- Tiêu đề -->
                    <h5 class="text-center mt-3 mb-4">Quên mật khẩu?</h5>
                    <p class="text-center text-muted">Nhập địa chỉ email của bạn để đặt lại mật khẩu.</p>

                    <!-- Form Nhập Email -->
                    <form asp-action="ForgotPassword" asp-controller="Home" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Nhập email của bạn" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Nút Reset Password -->
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-dark btn-lg rounded-pill">Đặt lại mật khẩu</button>
                        </div>
                    </form>

                    <!-- Đường link chuyển trang -->
                    <div class="text-center">
                        <p class="mb-1">Chưa có tài khoản? <a href="/Home/Register" class="text-primary">Đăng ký</a></p>
                        <p>Đã có tài khoản? <a href="/Home/Login" class="text-primary">Đăng nhập</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>